{
  "name": "create_tg_chat",
  "productName": "Создание чата в Telegram",
  "description": "Создание чата в Telegram",
  "version": "0.4.8",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "debs": "npm install --save --legacy-peer-deps --force",
    "postinstall": "electron-builder install-app-deps",
    "linux": "electron-builder --linux --publish always",
    "win": "electron-builder --win --publish always",
    "mac": "electron-builder --mac --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Saintdizen/create_tg_chat.git"
  },
  "keywords": [
    "Monitoring"
  ],
  "build": {
    "appId": "com.monitoring.createTelegramChat",
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "Saintdizen",
      "private": true,
      "repo": "create_tg_chat",
      "releaseType": "release"
    },
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "linux": {
      "category": "tests",
      "target": "AppImage"
    },
    "win": {
      "icon": "resources/icons/app/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "differentialPackage": false,
      "oneClick": false,
      "perMachine": true,
      "allowElevation": false,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "installerHeaderIcon": "resources/icons/app/icon.ico",
      "installerIcon": "resources/icons/app/icon.ico",
      "uninstallerIcon": "resources/icons/app/icon.ico",
      "artifactName": "${name}-${os}-${arch}-${version}.${ext}"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "main.js",
      "resources/**/*",
      "app/**/*"
    ]
  },
  "author": {
    "name": "Chuvakhin Ivan",
    "email": "saintdizen@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saintdizen/create_tg_chat/issues"
  },
  "homepage": "https://github.com/Saintdizen/create_tg_chat#readme",
  "devDependencies": {
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "chuijs": "~1.0.8",
    "googleapis": "~109.0.0",
    "nodejs-file-downloader": "~4.10.2",
    "qrcode": "~1.5.1",
    "request": "~2.88.2",
    "telegram": "~2.12.8",
    "transliteration": "~2.3.5"
  }
}
