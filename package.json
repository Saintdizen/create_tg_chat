{
  "name": "create_tg_chat",
  "productName": "Create Chat Telegram",
  "description": "Create Chat Telegram",
  "version": "0.8.7",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "debs": "npm install --save --legacy-peer-deps --force",
    "postinstall": "electron-builder install-app-deps",
    "linux": "electron-builder --linux --publish always",
    "win": "electron-builder --win --publish always",
    "mac": "electron-builder --mac --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Saintdizen/create_tg_chat.git"
  },
  "keywords": [
    "Monitoring"
  ],
  "build": {
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "saintdizen",
      "private": true,
      "repo": "create_tg_chat",
      "releaseType": "release",
      "token": "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"
    },
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "appId": "com.monitoring.createtelegramchat",
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "category": "test",
      "desktop": {
        "Name": "Create Chat Telegram",
        "Terminal": "false"
      }
    },
    "mac": {
      "signIgnore": "*",
      "category": "public.app-category.support-tools",
      "target": ["pkg"],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "resources/icons/app/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerHeaderIcon": "resources/icons/app/icon.ico",
      "installerIcon": "resources/icons/app/icon.ico"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "main.js",
      "update.json",
      "resources/**/*",
      "app/**/*"
    ]
  },
  "author": {
    "name": "Chuvakhin Ivan",
    "email": "saintdizen@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saintdizen/create_tg_chat/issues"
  },
  "homepage": "https://github.com/Saintdizen/create_tg_chat#readme",
  "devDependencies": {
    "electron-builder": "~23.6.0"
  },
  "dependencies": {
    "chuijs": "~1.8.2",
    "googleapis": "~126.0.1",
    "qrcode": "~1.5.3",
    "request": "~2.88.2",
    "telegram": "~2.19.6",
    "transliteration": "~2.3.5"
  }
}
